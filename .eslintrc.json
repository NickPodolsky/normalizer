{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "no-unused-expressions": "error",
    "no-undef": "error",
    "indent": [
      "error",
      4
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "semi": [
      "error",
      "always"
    ]
  },
  "globals": {
    "requireCorrespondingModule": false,
    "describe": false,
    "it": false,
    "expect": false,
    "correspondingModuleDirPath": false,
    "flog": false,
    "beforeEach": false
  }
}
